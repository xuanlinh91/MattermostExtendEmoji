{
  "name": "Mattermost Emoji Extension",
  "description": "Emoji for Mattermost by Nguyen Xuan Linh",
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "author": "Nguyễn Xuân Linh",
  "web_accessible_resources": [
    "img/*",
    "data/emo_url.json"
  ],
  "version": "1.4",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Mattermost Emoji by Nguyen Xuan Linh"
  },
  "content_scripts": [
    {
      "matches": ["*://chat.vietis.com.vn/*"],
      "run_at": "document_end",
      "js": ["jquery.js", "insert.js"],
      "css": ["newEmoji.css"]
    }
  ],
  "manifest_version": 2
}
